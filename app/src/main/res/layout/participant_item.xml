<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layer_ui_secondary_item_height"
    android:background="@drawable/ui_address_bar_item_background"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layer_ui_padding_narrow"
        android:layout_marginLeft="@dimen/layer_ui_avatar_left_padding_user_list"
        android:layout_marginRight="@dimen/layer_ui_avatar_right_padding_user_list"
        android:layout_marginTop="@dimen/layer_ui_padding_narrow">

        <com.layer.ui.avatar.AvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/layer_ui_avatar_width"
            android:layout_height="@dimen/layer_ui_avatar_height"
            android:layout_gravity="center_vertical" />

        <com.layer.ui.presence.PresenceView
            android:layout_width="@dimen/layer_ui_avatar_user_list_height"
            android:layout_height="@dimen/layer_ui_avatar_user_list_height"
            android:layout_gravity="bottom|right"
            android:id="@+id/presence" />

    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="[title]"
        android:textSize="@dimen/layer_ui_text_size_secondary_item"
        />

    <ImageView
        android:id="@+id/blocked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/layer_ui_padding_normal"
        android:scaleType="center"
        android:src="@drawable/ic_block_white_24dp"
        android:tint="@color/layer_ui_icon_enabled"
        android:visibility="invisible"
        />
</LinearLayout>